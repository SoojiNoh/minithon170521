  <div id="contact-us" class="parallax">
    <div class="container">
      <div class="row">
        <div class="heading text-center col-sm-8 col-sm-offset-2 wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
          <h2>내 정보</h2>
        </div>
      </div>
      <div class="contact-form wow fadeIn" data-wow-duration="1000ms" data-wow-delay="600ms">
        <div class="row">
          <div class="col-sm-12">
            <% if user_signed_in? %>
                <form id="main-contact-form" name="contact-form" method="post" action="#">
                  <div class="row  wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
                    <div class="col-sm-12">
                      <div class="form-group">

                        <input type="text" name="name" class="form-control" placeholder="A" required="required">
                      </div>
                    </div>
                    <div class="col-sm-12">
                      <div class="form-group">
                        <input type="email" name="email" class="form-control" placeholder="<%=current_user.email%>" required="required">
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <input type="text" name="subject" class="form-control" placeholder="00.00.00" required="required">
                  </div>
                  <div class="form-group">
                    <textarea name="message" id="message" class="form-control" rows="4" placeholder="안녕하세요" required="required"></textarea>
                  </div>
                </form>
                  <a class="btn btn-default" href="/users/sign_out" role="button">LOG OUT</a>
                  <a class="btn btn-default" href="/users/edit" role="button">PASSWORD CHANGE</a>
            <% else %>
                <a class="btn btn-default" href="/users/sign_in" role="button">LOG IN</a>
            <% end %>

          </div>
        </div>
      </div>
    </div>

  </div>
